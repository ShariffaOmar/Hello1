<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/etPhone">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etConfirmPassword"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="500dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="198dp"
            android:layout_marginStart="198dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:hint="confirm password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etFirstName"
            android:hint="FirstName"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_person_black_24dp"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toStartOf="@+id/etFirstName"
            android:layout_marginEnd="128dp" android:layout_marginRight="128dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etLastName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:hint="LastName"
            android:layout_marginTop="49dp" app:layout_constraintTop_toBottomOf="@+id/etFirstName"
            app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_person_black_24dp"
            android:id="@+id/imageView3" android:layout_marginTop="77dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintEnd_toStartOf="@+id/etLastName"
            android:layout_marginEnd="118dp" android:layout_marginRight="118dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/etPhone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:hint="PhoneNumber"
            app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="57dp"
            app:layout_constraintTop_toBottomOf="@+id/etLastName"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_phone_black_24dp"
            android:id="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="500dp"
            app:layout_constraintEnd_toStartOf="@+id/etPhone"
            android:layout_marginEnd="120dp" android:layout_marginRight="120dp" android:layout_marginTop="74dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="46dp" android:layout_marginStart="46dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:hint="Email Address"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/etPhone"
            app:layout_constraintStart_toEndOf="@+id/imageView5" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_email_black_24dp"
            android:id="@+id/imageView5"
            app:layout_constraintEnd_toStartOf="@+id/etEmail"
            android:layout_marginEnd="128dp" android:layout_marginRight="128dp" android:layout_marginTop="86dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="38dp" android:layout_marginStart="38dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etPassword" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:hint="Password"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/etEmail"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_https_black_24dp"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="349dp" android:layout_marginRight="349dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_https_black_24dp"
            android:id="@+id/imageView9"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="200dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="387dp"
            android:layout_marginRight="387dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="463dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="589dp"
            android:id="@+id/btnSignUp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>